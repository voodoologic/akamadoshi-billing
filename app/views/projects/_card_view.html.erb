<% if @projects.count > 0 %>
    <% @projects.group_by { |d| d.group_date }.each do |date, projects| %>
        <p><span class="activity-date"><%= date %></span></p>
        <div class="flex-wrapper">
          <%= render partial: 'project_card', collection: projects, as: :project %>
        </div>
    <% end %>
<% end %>
