<% if current_user.settings.currency.present? and current_user.settings.currency == "On"  %>
$("#invoice_currency, #estimate_currency ").removeClass('hide')
$('.invoice_currency, .estimate_currency').val("<%= @client.currency_id %>")
$('#discount_type').find('option:last').val("<%= @client.currency.unit %>").html("<%= @client.currency.unit %>").trigger("liszt:updated");
$('.invoice_currency, .estimate_currency').trigger("liszt:updated");

window.currency_symbol = "<%= @client.currency.unit %>"
$("#invoice_sub_total_lbl, #invoice_total_lbl, .tax_amount, #estimate_sub_total_lbl, #estimate_total_lbl").formatCurrency({symbol: window.currency_symbol})


$("#recurring_profile_currency").removeClass('hide')
$('.recurring_profile_currency').val("<%= @client.currency_id %>")
$('.recurring_profile_currency').trigger("liszt:updated");

window.currency_symbol = "<%= @client.currency.unit %>"
$("#recurring_profile_total_lbl, #recurring_profile_total_lbl, .tax_amount").formatCurrency({symbol: window.currency_symbol})
<% end %>
