<div id="main-content">
  <div id="sort_direction" style="display: none;"><%= params[:direction] %></div>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>

  <div class="taxes">
    <div class="content_top">
      <div class="primary_heading">
        <h1>
          <%= t('views.taxes.taxes') %><span>&nbsp;/&nbsp;<%= t('views.common.active') %></span>
        </h1>
      </div>
      <div class="primary_btn">
        <%= link_to (content_tag(:span, t('views.taxes.new'))),
                    new_tax_path,
                    :class => 'btn_large' %>
      </div>
    </div>
    <!--content_top-->
    <%= form_tag "taxes/bulk_actions", {method: :get, :remote => true} do -%>
        <div class="content_middle">
          <div class="grid_control">
            <div class="grid_control_left">
              <ul value='tax' id="bulk_actions">
                <%= render "bulk_actions" %>
              </ul>
            </div>
            <div class="grid_control_right" id="active_links">
              <%= render 'filter_links' %>
            </div>
          </div>
          <!--grid_control-->
          <div class="grid_table">
            <table cellpadding="0" cellspacing="0" class="table table_listing tax_listing">
              <colgroup>
                <col class="one"/>
                <col class="two"/>
                <col class="three"/>
                <col class="four"/>
              </colgroup>
              <thead id="tax_head">
              <%= render partial: 'tax_header' %>
              </thead>
              <tbody id="tax_body">
              <%= render 'taxes' %>
              <tfoot id="paging_links">
              <%= render "application_partials/paging" %>
              </tfoot>
              </tbody>
            </table>
          </div>
          <!--grid_table-->
        </div>
        <!--content_middle-->
        <div class="content_bottom">
          <%= link_to (content_tag(:span, t('views.taxes.new'))),
                      new_tax_path,
                      :class => 'btn_large' %>
        </div>
        <!--content_bottom-->
    <% end %>
  </div><!--taxes-->

</div>