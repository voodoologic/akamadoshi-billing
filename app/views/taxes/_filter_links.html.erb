<div class="grid_control_right">
  <ul>
    <li class="grid_control_sep sep_right">
      <%= link_to t('views.common.active'), "?status=active&per=#{@per_page}", :remote => true, :class => "get_actives #{'active' if params[:status] == 'active'}" %>
      <span class="item_counts" id="actives">(<%= Tax.unarchived.size %>)</span>
    </li>
    <li class="grid_control_sep sep_right">
      <%= link_to t('views.common.archived'), "?status=archived&per=#{@per_page}", :remote => true, :class => "get_archived #{'active' if params[:status] == 'archived'}" %>
      <span class="item_counts" id="archives">(<%= Tax.archived.size %>)</span>
    </li>
    <li>
      <%= link_to t('views.common.deleted'), "?status=deleted&per=#{@per_page}", :remote => true, :class => "get_deleted #{'active' if params[:status] == 'deleted'}" %>
      <span class="item_counts" id="deletes">(<%= Tax.only_deleted.size %>)</span>
    </li>
  </ul>
</div>

