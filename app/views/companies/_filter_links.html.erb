<div class="grid_control_right">
  <ul>
    <li class="grid_control_sep sep_right">
      <%= link_to t("views.common.active"), "?status=active#{query_string(params.except(:page).merge(per: @per_page))}", :class => "get_actives #{'active' if params[:status] == 'active'}", :remote => true %>
      <span id="actives">(<%= get_companies_count('unarchived') %>)</span>
    </li>
    <li class="grid_control_sep sep_right">
      <%= link_to t("views.common.archived"), "?status=archived#{query_string(params.except(:page).merge(per: @per_page))}", :class => "get_archived #{'active' if params[:status] == 'archived'}", :remote => true %>
      <span id="archives">(<%= get_companies_count('archived') %>)</span>
    </li>
    <li>
      <%= link_to t('views.common.deleted'), "?status=deleted#{query_string(params.except(:page).merge(per:@per_page))}", :class => "get_deleted #{'active' if params[:status] == 'deleted'}", :remote => true %>
      <span id="deletes">(<%= get_companies_count('only_deleted') %>)</span>
    </li>
  </ul>
</div>
