<aside id="activity-sidebar" class='<%= "#{ 'side-show' if side_nav_opened?}"%>'>
    <span class="btn-activity"><i class="material-icons">
      keyboard_arrow_left
    </i></span>
  <div class="activity-scroll-holder mCustomScrollbar">
    <% @user_activities.group_by { |d| d.group_role }.each do |role, users| %>
      <div class="status-info active">
        <h5>
          <a href="javascript:;" class="non-clickable"><%= t('views.users.' + role.downcase) rescue '' %></a>
          <span id="actives">(<%= users.length %>)</span>
        </h5>
      </div>
    <% end %>
  </div>
</aside>
