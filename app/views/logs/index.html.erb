<%= render 'log_activity'%>
<div id="main-content" class='<%= "#{ 'side-show' if side_nav_opened?}"%>'>
  <!--- main content --->
  <div class="row">
    <!--- breadcrum Bar --->
    <div class="col s12 breadcrum-bar">
      <div class="card-white-panel">
        <h3>
          <%= t('header.links.time_tracking.time_tracking') %>:
          <select onchange="location = this.value;">
            <option value="<%= "/#{I18n.locale}/projects" %>"> <%= t('header.links.time_tracking.project') %></option>
            <option value="<%= "/#{I18n.locale}/tasks" %>"><%= t('header.links.time_tracking.task') %></option>
            <option value="<%= "/#{I18n.locale}/staffs" %>"><%= t('header.links.time_tracking.staff') %></option>
            <option value="<%= "/#{I18n.locale}/logs" %>" selected><%= t('header.links.time_tracking.time_sheet') %></option>
          </select>
        </h3>
      </div>
    </div>

    <div class="invoice-box log-box clearfix noCollapse card-white-panel time-log-container">
        <div class="row month" id="calendar_divs">
          <div class="col s12 m8 l8 xl8" id="calendar"></div>
          <div class="col s12 m4 l4 xl4 inline_form" id="calendar_form">
            <%= render 'new_form' %>
          </div>
        </div>

        <div class="row">
          <div class="col s12">
            <div class="content_middle logs_table">
              <%= render 'logs/logs_table' %>
            </div>
          </div>

        </div>
    </div>
  </div>
</div>