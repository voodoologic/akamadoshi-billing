<div class="page-header">
  <h1>Your applications</h1>
</div>

<p><%= link_to 'New Application', new_oauth_application_path, class: 'btn_large oauth_applications_btn' %></p>
<div class="grid_table">
    <table class="table table_listing">
      <thead>
      <tr>
        <th  class="align_left not-sortable">Name</th>
        <th  class="align_left not-sortable">Callback URL</th>
        <th  class="align_left not-sortable">Actions</th>
        <th class="align_left not-sortable"></th>
      </tr>
      </thead>
      <tbody>
      <% @applications.each do |application| %>
        <tr id="application_<%= application.id %>">
          <td><%= link_to application.name, [:oauth, application] %></td>
          <td><%= application.redirect_uri %></td>
          <td><%= link_to 'Edit', edit_oauth_application_path(application), class: 'btn btn-link' %></td>
          <td><%= render 'delete_form', application: application %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
</div>